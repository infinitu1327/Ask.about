@inject IViewLocalizer Localizer

@model Reply

@{
    ViewData["Title"] = Localizer["Title"];
}

@section Styles{
    <link href="~/css/Questions/Create.css" rel="stylesheet" />
}

<h2>@Localizer["Title"]</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="Attachment"/>
        <input type="hidden" name="qid" value="@Model.Question.Id"/>
        <div class="form-group">
            <label class="col-md-2 control-label">@Localizer["Text"]</label>
            <div class="col-md-10">
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">@Localizer["Attachment"]</label>
            <div class="col-md-10">
                <input type="file" name="file" asp-for="Attachment"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Questions" asp-action="Details" asp-route-id="@Model.Question.Id">@Localizer["Back"]</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}